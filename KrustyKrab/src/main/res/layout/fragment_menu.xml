<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/white">


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <Button
            android:text="@string/hawaiin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:id="@+id/hawaiibutton" />

        <Button
            android:text="@string/meatlovers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hawaiibutton"
            android:layout_alignEnd="@+id/hawaiibutton"
            android:layout_marginTop="37dp"
            android:id="@+id/meatloversBtn" />

        <Button
            android:text="@string/veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/veggieBtn"
            android:layout_below="@+id/meatloversBtn"
            android:layout_alignStart="@+id/hawaiibutton" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="182dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_marginStart="85dp"
            android:id="@+id/imageView2" />
    </RelativeLayout>

</RelativeLayout>